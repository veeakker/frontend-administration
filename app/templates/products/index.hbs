{{page-title "Products overview"}}

<div class="container">
  <div class="page-header">
    <h1>Products <small>as a list</small></h1>
  </div>

  <BsTable
    @content={{@model}}
    @fields="plu label isEnabled unitPrice"
    @isLoading={{this.isLoadingModel}}
    @filter={{this.filter}}
    @sort={{this.sort}}
    @page={{this.page}}
    @size={{this.size}}
    @autoSearch={{true}}
    @lineNumbers={{true}}
    @updatePage={{fn (mut this.page)}}
    @updatePageSize={{fn (mut this.size)}} {{!-- change to size or vice-versa? --}}
    @updateFilter={{fn (mut this.filter)}}
    @link="products.show"
    @updateSort={{fn (mut this.sort)}}
    @customHeaders="unitPrice"
    @customFields="unitPrice">
    <:data-header as |header|>
      {{#if (eq header.label "unitPrice")}}
        <th>Price</th>
      {{else}}
        <th>{{header.label}}</th>
      {{/if}}
    </:data-header>
    <:data-cell as |cell|>
      {{#if (eq cell.label "unitPrice")}}
        {{#let cell.value.value cell.value.unit as |euros unit|}}
          {{#if (and euros unit)}}
            &euro; {{euros}} per {{human-unit unit}}
          {{else}}
            none
          {{/if}}
        {{/let}}
      {{/if}}
    </:data-cell>
  </BsTable>
</div>

{{outlet}}