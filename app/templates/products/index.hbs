{{page-title "Products overview"}}

<div class="container">
  <div class="page-header">
    <h1>Products <small>as a list</small></h1>
  </div>

  <BsTable
    @content={{@model}}
    @fields="plu label isEnabled"
    @isLoading={{this.isLoadingModel}}
    @filter={{this.filter}}
    @sort={{this.sort}}
    @page={{this.page}}
    @size={{this.size}}
    @autoSearch={{true}}
    @lineNumbers={{true}}
    @updatePage={{fn (mut this.page)}}
    @updatePageSize={{fn (mut this.size)}} {{!-- change to size or vice-versa? --}}
    @updateFilter={{fn (mut this.filter)}}
    @link="products.show"
    @updateSort={{fn (mut this.sort)}}>
  </BsTable>
</div>

{{outlet}}