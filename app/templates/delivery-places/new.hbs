{{page-title "New"}}

<div class="container">
  <Ux::PageHeader @class="delivery-place" @model={{@model}} @kind="new"/>

  <form {{on "submit" (e/pipe (e/prevent-default) this.create)}}>

    <div class="row">
      <Ux::DetailsCard
        @editable={{true}}
        @resource={{@model.postalAddress}}
        @class="delivery-place"
        class="col-12 col-md-6"
      >
        <:title>Postal address</:title>
        <:body as |C|>
          <C.Property @property="country" @label="Country" />
          <C.Property @property="postalCode" @label="Postal code" />
          <C.Property @property="locality" @label="Village" />
          <C.Property @property="streetAddress" @label="Street address" />
        </:body>
      </Ux::DetailsCard>
      <Ux::DetailsCard
        @editable={{true}}
        @resource={{@model}}
        @class={{this.DeliveryPlaceModel}}
        class="col-12 col-md-6"
      >
        <:title>Kind</:title>
        <:body as |C|>
          <C.Property @property="deliveryKind" @label="Delivery kind" />
          <C.Property @property="lfwLink" @label="Link to LFW" />
          <C.Property @property="slug" @label="URL slug" />
        </:body>
      </Ux::DetailsCard>
      <Ux::DetailsCard
        @editable={{true}}
        @resource={{@model}}
        @class={{this.DeliveryPlaceModel}}
        class="col-12"
      >
        <:title>Geo location</:title>
        <:body as |C|>
          <C.Property @property="geoCoordinate" @renderLabel={{false}} />
        </:body>
      </Ux::DetailsCard>
    </div>
    <div class="row p-2">
      <BsButton type="submit" @type="primary" class="col-6 col-s-12">Create</BsButton>
      <BsButton
        {{on "click" this.cancel}}
        @type="danger"
        type="button"
        class="col-6 col-s-12">
        Cancel
      </BsButton>
    </div>
  </form>
</div>

{{outlet}}