<Ui::Card ...attributes>
  <:title>
    {{#if (has-block "title")}}
      {{yield to="title"}}
    {{else}}
      {{@title}}
    {{/if}}
  </:title>
  <:body as |card|>
    {{#if (has-block "body")}}
      {{yield (hash
          Dt=(component "ux/details-card/dt")
          Dd=(component "ux/details-card/dd")
          Card=card
          Property=(component "ux/details-card/property" resource=@resource editable=@editable class=@class))
          to="body"}}
    {{else}}
      {{yield (hash
          Dt=(component "ux/details-card/dt")
          Dd=(component "ux/details-card/dd")
          Card=card
          Property=(component "ux/details-card/property" resource=@resource editable=@editable class=@class))
          to="default"}}
    {{/if}}
  </:body>
</Ui::Card>
