<Ui::Card ...attributes>
  <:title>
    {{#if (has-block "title")}}
      {{yield to="title"}}
    {{else}}
      {{@title}}
    {{/if}}
  </:title>
  <:body>
    {{#if (has-block "body")}}
      {{yield (hash
          Dt=(component "details-card/dt")
          Dd=(component "details-card/dd")
          Property=(component "details-card/property" resource=@resource))
          to="body"}}
    {{else}}
      {{yield (hash
          Dt=(component "details-card/dt")
          Dd=(component "details-card/dd")
          Property=(component "details-card/property" resource=@resource))
          to="default"}}
    {{/if}}
  </:body>
</Ui::Card>
